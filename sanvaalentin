    <script>
        const btnNo = document.getElementById('no');
        const btnSi = document.getElementById('si');

        // 1. Bot√≥n "No" juguet√≥n
        btnNo.addEventListener('mouseover', moveButton);
        btnNo.addEventListener('touchstart', moveButton);

        function moveButton() {
            const x = Math.random() * (window.innerWidth - btnNo.clientWidth);
            const y = Math.random() * (window.innerHeight - btnNo.clientHeight);
            btnNo.style.left = x + 'px';
            btnNo.style.top = y + 'px';
        }

        // 2. Bot√≥n "S√≠" con Confeti
        btnSi.addEventListener('click', () => {
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 },
                colors: ['#ff4d6d', '#ff8fa3', '#ffccd5']
            });

            setTimeout(() => {
                alert("¬°Sab√≠a que dir√≠as que s√≠! üòç Te amo much√≠simo, gracias por este mes incre√≠ble.");
                // Opcional: Redirigir a una foto de ustedes
                window.location.href = "https://drive.google.com/file/d/10iY_zmRbHoOocaCiSHo36MABP8l9fnAc/view?usp=sharing";
            }, 500);
        });

        // 3. Crear lluvia de corazones autom√°tica
        setInterval(() => {
            const heart = document.createElement('div');
            heart.classList.add('heart-rain');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 2 + 3 + 's';
            heart.style.opacity = Math.random();
            document.body.appendChild(heart);
            
            setTimeout(() => heart.remove(), 5000);
        }, 300);
    </script>
